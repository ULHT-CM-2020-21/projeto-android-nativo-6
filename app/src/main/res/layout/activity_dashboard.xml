<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Dashboard">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:weightSum="2">

        <androidx.cardview.widget.CardView
            android:id="@+id/display_confirmados"
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_weight="1"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="@color/white">

            <LinearLayout android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="@string/confirmados"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:textColor="@color/black"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@android:color/darker_gray" />
                <TextView
                    android:id="@+id/numero_confirmados"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textSize="25sp"
                    android:textAlignment="center"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/numero_novos_confirmados"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:textColor="@color/grey"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/display_recuperados"
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_weight="1"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="@color/white">

            <LinearLayout android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="@string/recuperados"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:textColor="@color/black"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@android:color/darker_gray" />
                <TextView
                    android:id="@+id/numero_recuperados"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textSize="25sp"
                    android:textAlignment="center"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/numero_novos_recuperados"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:textColor="@color/grey"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:weightSum="2">


        <androidx.cardview.widget.CardView
            android:id="@+id/display_obitos"
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_weight="1"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="@color/white">

            <LinearLayout android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="@string/mortes"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:textColor="@color/black"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@android:color/darker_gray" />
                <TextView
                    android:id="@+id/numero_obitos"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textSize="25sp"
                    android:textAlignment="center"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/numero_novos_obitos"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:textColor="@color/grey"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/display_internados"
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_weight="1"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="@color/white">

            <LinearLayout android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="@string/internados"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:textColor="@color/black"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@android:color/darker_gray" />
                <TextView
                    android:id="@+id/numero_internados"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textSize="25sp"
                    android:textAlignment="center"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/numero_novos_internados"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:textColor="@color/grey"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>


</LinearLayout>